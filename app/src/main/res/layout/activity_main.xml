<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_line_horizontal"
    android:dividerPadding="2dp"
    android:orientation="vertical"
    android:showDividers="end|beginning|middle"
    tools:context="com.willme.topactivity.view.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/theme_main"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/show_drag_window"
        android:textColor="@color/white"
        android:textSize="12sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/show_drag_window"
            android:textColor="@color/theme_main"
            android:textSize="14sp"/>

        <Switch
            android:id="@+id/sw_window"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:thumb="@drawable/shape_blue_circle"
            android:track="@drawable/sl_track"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/use_toggle_notification"
            android:textColor="@color/theme_main"
            android:textSize="14sp"/>

        <Switch
            android:id="@+id/sw_notification"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:thumb="@drawable/shape_blue_circle"
            android:track="@drawable/sl_track"
            />

    </LinearLayout>


</LinearLayout>
